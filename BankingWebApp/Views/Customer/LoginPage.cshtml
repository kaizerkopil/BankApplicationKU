@model Customer

@{
    Layout = "_Layout_LoginPage";
}

<div class="d-flex flex-column min-vw-100 min-vh-100 p-2 p-md-0 justify-content-lg-center">
    <div class="d-flex flex-column gap-3 gap-lg-0 flex-lg-row align-items-center container mt-3 mt-lg-0">
        <div class="rounded-3"><img src="~/images/bank_app_icon.png" width="150px" heigh="100px" alt="FastBank Logo"/></div>
        <div class="container text-center text-lg-start">
            <h4>The future is here with <span class="h2 fw-bolder">FastBank™</span></h4>
            <h5>Banking has never been faster</h5>
        </div>
    </div>
    @using (Html.BeginForm("LoginPage", "Customer",
    new { },
    FormMethod.Post,
    true,
    new { }))
    { 
        <div class="container mt-4 border border-1 border-black border-opacity-50 rounded-3">
            <h1 class="mt-3 fw-light ps-2 ps-md-4">Login Page</h1>
            <hr />
            <div class="row gap-2 gap-md-3 pt-4">
                <div class="row mx-auto">
                    <div class="col-12 col-md-10 col-lg-8">
                        <div class="input-group mt-3 mb-3">
                            <span class="input-group-text justify-content-center" style="width:50px;" data-bs-placement="left" data-bs-title="Enter your Email Address" data-bs-toggle="tooltip">
                                <i class="fas fa-mail-bulk"></i>
                            </span>
                            <div class="form-floating">
                                <input type="email" class="form-control" id="floatingEmailInput" placeholder="Enter email here" asp-for=EmailAddress>
                                <label for="floatingInput" class="ms-2 fw-semibold" asp-for=EmailAddress>Email address</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        @Html.ValidationMessageFor(m => m.EmailAddress, "", new { @class = "ps-3 col-md-9 fst-italic", @style = "color:crimson;" })
                    </div>
                </div>
                <div class="row align-items-center mx-auto">
                    <div class="col-12 col-md-10 col-lg-8">
                        <div class="input-group mt-3 mb-3">
                            <span class="input-group-text justify-content-center" style="width:50px;" data-bs-placement="left" data-bs-title="Enter your Password" data-bs-toggle="tooltip">
                                <i class="fas fa-mail-bulk"></i>
                            </span>
                            <div class="form-floating">
                                <input type="password" class="form-control" id="floatingPasswordInput" placeholder="Enter password here" asp-for=Password>
                                <label for="floatingInput" class="ms-2 fw-semibold" asp-for=Password>Password</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "ps-3 col-md-9 fst-italic", @style = "color:crimson;" })
                    </div>
                </div>
                <div class="container-sm mx-auto row align-self-start">
                    @if (ViewData["UserNotFound"] != null)
                    {
                        <div class="ps-0 ps-md-3 col-auto"><p style="color:crimson">@(ViewData["UserNotFound"] as string)</p></div>
                    }
                </div>
                <div class="row gap-2 ms-3 mt-2">
                    <button class="btn btn-primary col-3 col-md-2" type="submit">Login</button>
                    <a class="btn btn-primary col-3 col-md-2 " asp-action="RegisterCustomer" asp-controller="Customer">Register</a>
                </div>
                <div class="d-flex justify-content-end mt-4 pe-1 ms-auto">
                    <p class="fw-light small text-end mb-1 bg-secondary-subtle rounded-pill p-1">
                        © All rights reserved ® by
                        <span class="fw-semibold">Kopil Kaiser</span> ™
                    </p>
                </div>
            </div>
        </div>
    }
</div>