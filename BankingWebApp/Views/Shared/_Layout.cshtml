<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BankingWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BankingWebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex flex-lg-row flex-column flex-nowrap" id="sideBarDiv">
        <h1 class="visually-hidden">Sidebars examples</h1>
        <div class="b-example-divider b-example-vr"></div>

        <!-- #region Navigation Bar -->
        <nav class="navbar navbar-expand-lg bg-body-tertiary d-lg-none">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">FastBank</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["ActiveLink"] as string == "Home" ? "active" : "")" asp-controller="Home" asp-action="Index">
                                Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#infoContainer" class="nav-link">
                                My Accounts
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#infoContainer" class="nav-link">
                                Transfer Money
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#infoContainer" class="nav-link">
                                Show Transactions
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["ActiveLink"] as string == "Privacy" ? "active" : "")" asp-controller="Home" asp-action="Privacy">
                                Privacy
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="LoginPage" asp-controller="Home">
                                Sign out
                            </a>
                        </li>
                        @* <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Dropdown
                        </a>
                        <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">Action</a></li>
                        <li><a class="dropdown-item" href="#">Another action</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#">Something else here</a></li>
                        </ul>
                        </li> *@
                        @*  <li class="nav-item">
                        <a class="nav-link disabled" aria-disabled="true">Disabled</a>
                        </li> *@
                    </ul>
                    @*<form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                    </form> *@
                </div>
            </div>
        </nav>
        <!-- #endregion Navigation Bar -->
        <!-- #region SideBar -->
        <div class="d-none d-lg-flex flex-column flex-shrink-0 p-3 bg-body-tertiary" style="width: 300px;">
            <!-- #region SideBar Header -->
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
                <svg class="bi pe-none me-2" width="40" height="32"><use xlink:href="#bootstrap" /></svg>
                <a class="fs-4 text-decoration-none" asp-controller="Home" asp-action="Index">FastBank</a>
            </a>
            <!-- #endregion SideBar Header -->
            <hr>

            <ul class="nav nav-pills flex-column mb-auto">

                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Index" class="nav-link link-body-emphasis @(ViewData["ActiveLink"] as string == "Home" ? "active" : "")">
                        Home
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#secondaryContainer" class="nav-link link-body-emphasis">
                        My Accounts
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#primaryContainer" class="nav-link link-body-emphasis">
                        Transfer Money
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#infoContainer" class="nav-link link-body-emphasis">
                        Show Transactions
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Privacy" class="nav-link link-body-emphasis @(ViewData["ActiveLink"] as string == "Privacy" ? "active" : "")">
                        Privacy
                    </a>
                </li>
            </ul>

            <hr>
            <!-- #region SideBar Footer-->
            <div class="dropdown">
                <a href="#" class="d-flex align-items-center link-body-emphasis text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="https://github.com/mdo.png" alt="" width="32" height="32" class="rounded-circle me-2">
                    <strong>Kopil</strong>
                </a>
                <ul class="dropdown-menu text-small shadow">
                    @*<li><a class="dropdown-item" href="#">New project...</a></li>*@
                    @*<li><a class="dropdown-item" href="#">Settings</a></li>*@
                    <li><a class="dropdown-item" href="#">Profile</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" asp-action="LoginPage" asp-controller="Home">Sign out</a></li>
                </ul>
            </div>
            <!-- #endregion SideBar Footer-->

        </div>
        <!--#endregion SideBar -->
        <!-- #region Content -->
        <div class="vh-100 vw-100" id="renderBody">
            @* <div class="w-100 h-50 bg-success" id="successContainer"></div>
            <div class="w-100 h-50 bg-danger" id="dangerContainer"></div>
            <div class="w-100 h-50 bg-secondary" id="secondaryContainer"></div>
            <div class="w-100 h-50 bg-primary" id="primaryContainer"></div>
            <div class="w-100 h-50 bg-info" id="infoContainer"></div>
            <div class="w-100 h-50 bg-dark" id="darkContainer"></div> *@
            @RenderBody()
        </div>
        <!-- #endregion Content -->

    </div>

    @*     <footer class="border-top footer text-muted">
    <div class="container">
    &copy; 2023 - BankingWebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
    </footer> *@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
